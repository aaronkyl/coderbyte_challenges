function capitalizeFirsts(str) {
  result = "";
  for (i = 0; i < str.length; i++) {
    if (i === 0) {
      result = str[i].toUpperCase();
    } else if (str[i - 1] === " ") {
      result = result + str[i].toUpperCase();
    } else {
      result = result + str[i];
    }
  }
  return result;
}

console.log(capitalizeFirsts(string));
